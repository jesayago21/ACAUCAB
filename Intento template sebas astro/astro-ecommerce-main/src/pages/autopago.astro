---
import Layout from "../layouts/Layout.astro";
import "../../assets/scss/astro-ecommerce.scss";
import AutopagoFlow from "../components/autopago/AutopagoFlow";
---

<Layout title="Autopago - ACAUCAB">
  <main class="autopago-main">
    <!-- Componente principal del flujo de autopago -->
    <AutopagoFlow client:load />
  </main>
</Layout>

<style is:global>
  /* Solo variables CSS esenciales y overrides mínimos para Tailwind */
  :root {
    --green-bottle: #1e3a1a;
    --green-dark: #2d5530;
    --green-medium: #4a7c59;
    --green-light: #68a077;
    --green-pale: #e8f5e8;
  }

  /* Fondo principal */
  .autopago-main {
    min-height: 100vh;
    background: linear-gradient(
      135deg,
      var(--green-bottle) 0%,
      var(--green-dark) 50%,
      var(--green-medium) 100%
    );
    font-family: "Inter", "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }

  /* Overrides específicos para colores personalizados que Tailwind no tiene */
  .bg-green-custom {
    background-color: var(--green-medium) !important;
  }

  .bg-green-custom-dark {
    background-color: var(--green-dark) !important;
  }

  .text-green-custom {
    color: var(--green-medium) !important;
  }

  .text-green-custom-dark {
    color: var(--green-dark) !important;
  }

  .border-green-custom {
    border-color: var(--green-medium) !important;
  }

  /* Gradientes personalizados */
  .bg-gradient-custom {
    background: linear-gradient(
      90deg,
      var(--green-medium) 0%,
      var(--green-dark) 100%
    ) !important;
  }

  .bg-gradient-custom:hover {
    background: linear-gradient(
      90deg,
      var(--green-dark) 0%,
      var(--green-bottle) 100%
    ) !important;
  }

  /* Forzar estilos de botones específicos para Tailwind */
  button.bg-green-500,
  .bg-green-500 {
    background-color: #0b996a !important;
    color: white !important;
  }
  beer-default.jpg button.bg-green-500:hover,
  .bg-green-500:hover {
    background-color: #059669 !important;
    color: white !important;
  }

  button.bg-green-100,
  .bg-green-100 {
    background-color: #dcfce7 !important;
    color: #166534 !important;
  }

  button.bg-green-100:hover,
  .bg-green-100:hover {
    background-color: #bbf7d0 !important;
    color: #166534 !important;
  }

  /* Forzar que los botones mantengan sus estilos de Tailwind */
  .autopago-main button[class*="bg-green"] {
    border: none !important;
    opacity: 1 !important;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06) !important;
  }

  .autopago-main button[class*="bg-green"]:hover {
    opacity: 1 !important;
    transform: scale(1.05) !important;
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05) !important;
  }

  .autopago-main button[class*="bg-green"]:disabled {
    opacity: 0.5 !important;
    transform: none !important;
    cursor: not-allowed !important;
  }
</style>
