---
import Layout from "../layouts/Layout.astro";
import "../../assets/scss/astro-ecommerce.scss";
import AutopagoFlow from "../components/autopago/AutopagoFlow";
---

<Layout title="Autopago - ACAUCAB">
  <main class="autopago-main">
    <!-- Componente principal del flujo de autopago -->
    <AutopagoFlow client:load />
  </main>
</Layout>

<style is:global>
  /* Solo variables CSS esenciales y overrides mínimos para Tailwind */
  :root {
    --green-bottle: #1e3a1a;
    --green-dark: #2d5530;
    --green-medium: #4a7c59;
    --green-light: #68a077;
    --green-pale: #e8f5e8;
  }

  /* Fondo principal */
  .autopago-main {
    min-height: 100vh;
    background: linear-gradient(
      135deg,
      var(--green-bottle) 0%,
      var(--green-dark) 50%,
      var(--green-medium) 100%
    );
    font-family: "Inter", "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }

  /* Overrides específicos para colores personalizados que Tailwind no tiene */
  .bg-green-custom {
    background-color: var(--green-medium) !important;
  }

  .bg-green-custom-dark {
    background-color: var(--green-dark) !important;
  }

  .text-green-custom {
    color: var(--green-medium) !important;
  }

  .text-green-custom-dark {
    color: var(--green-dark) !important;
  }

  .border-green-custom {
    border-color: var(--green-medium) !important;
  }

  /* Gradientes personalizados */
  .bg-gradient-custom {
    background: linear-gradient(
      90deg,
      var(--green-medium) 0%,
      var(--green-dark) 100%
    ) !important;
  }

  .bg-gradient-custom:hover {
    background: linear-gradient(
      90deg,
      var(--green-dark) 0%,
      var(--green-bottle) 100%
    ) !important;
  }
</style>
